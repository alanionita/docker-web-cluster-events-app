{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./",
    "lib": ["es6"],
    "baseUrl": ".",
    "paths": {
      "@/root/*": ["./*"],
      "@/controllers/*": ["controllers/*"],
      "@/lib/*": ["lib/*"],
      "@/routes/*": ["routes/*"]
    },
    //"types": [],
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}